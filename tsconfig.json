{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "strict": true,
    "lib": [
      "es5",
      "dom",
      "es2015.promise",
      "es2015.symbol",
      "es2015.iterable",
      "es2015.collection",
      "es2015.symbol.wellknown",
      "es2015.core",
      "es2017.object",
      "es2017.string"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "ES2017",
    "outDir": "dist",
    "noEmit": false
  },
  "exclude": [
    "dist/**/*",
    "test/**/*"
  ]
}
